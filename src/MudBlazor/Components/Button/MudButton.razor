@namespace MudBlazor
@inherits MudBaseButton
@using MudBlazor.Extensions

<button @attributes="UserAttributes" type="@ButtonType.ToDescriptionString()" class="@Classname" style="@Style" @onclick="OnClickHandler" href="@Link" disabled="@Disabled">
    <span class="mud-button-label">
        @if (!string.IsNullOrWhiteSpace(StartIcon))
        {
            <span class="@IconClassname">
                <MudIcon Icon="@StartIcon" Size="@Size"></MudIcon>
            </span>
        }
        @ChildContent
        @if (!string.IsNullOrWhiteSpace(@EndIcon))
        {
            <span class="@IconClassname">
                <MudIcon Icon="@EndIcon" Size="@Size"></MudIcon>
            </span>
        }
    </span>
</button>
