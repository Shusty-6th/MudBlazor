@namespace MudBlazor
@inherits MudBaseInputText

<MudInputControl HelperText="@HelperText" FullWidth="@FullWidth">
    <MudInput @attributes="UserAttributes" InputType="@InputType" Class="@Classname" Style="@Style"
              Variant="@Variant" @bind-Value="@Value" Placeholder="@Placeholder" Disabled=@Disabled ReadOnly="@ReadOnly"
              Adornment="@Adornment" AdornmentText="@AdornmentText" AdornmentIcon="@AdornmentIcon" IconSize="@IconSize" OnAdornmentClick="@OnAdornmentClick" Error="@Error" />
    <MudInputLabel Class="mud-input-label-inputcontrol" Variant="@Variant" Disabled=@Disabled>
        @Label
    </MudInputLabel>
</MudInputControl>

