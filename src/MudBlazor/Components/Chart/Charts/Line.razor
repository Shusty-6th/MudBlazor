@namespace MudBlazor.Charts
@using System.Globalization;
@inherits LineBase


<svg class="mud-chart-line" width="@MudChartParent.Width" height="@MudChartParent.Height" viewBox="0 0 650 350">
    @foreach (var horizontalLine in HorizontalLines)
    {
        <path stroke="gray" stroke-width="0.3" d="@horizontalLine.Data"></path>
    }
    @foreach (var horizontalLineValue in HorizontalValues)
    {
        @((MarkupString)$"<text x='{horizontalLineValue.X.ToString(CultureInfo.InvariantCulture)}' y='{horizontalLineValue.Y.ToString(CultureInfo.InvariantCulture)}' fill='Black'>{horizontalLineValue.Value.ToString(CultureInfo.InvariantCulture)}</text>")
    }
    @foreach (var verticalLine in VerticalLines)
    {
        <path stroke="gray" stroke-width="0.3" d="@verticalLine.Data"></path>
    }
</svg>


<MudGrid>
    <MudItem>
        <MudText Typo="Typo.body2">@Test1</MudText>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.body2">@Test2</MudText>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.body2">@Test3</MudText>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.body2">@Test4</MudText>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.body2">@Test5</MudText>
    </MudItem>
</MudGrid>